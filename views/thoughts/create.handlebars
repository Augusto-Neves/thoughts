<div class='thought-form-container'>
  <a href='/thoughts/dashboard'>Voltar</a>
  <h1>Criando um pensamento:</h1>
  <form action='/thoughts/add' method='post'>
    <div class='form-control'>
      <label for='title'>Pensamento</label>
      <textarea
        name='title'
        id='title'
        placeholder='Digite seu pensamento'
        required
      ></textarea>
    </div>
    <input type='submit' value='Salvar Pensamento' />
  </form>
</div>